{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pv0008"
  },
  "spec": {
    "capacity": {
        "storage": "1Gi"
    },
    "accessModes": [ "ReadWriteOnce", "ReadWriteMany" ],
    "nfs": {
        "path": "/opt/nfs/pv0008",
        "server": "10.100.192.201"
    },
    "persistentVolumeReclaimPolicy": "Recycle"
  }
}
