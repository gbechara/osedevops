{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "pv0013"
    },
    "spec": {
        "capacity": {
            "storage": "5Gi"
        },
        "accessModes": [ "ReadWriteOnce", "ReadWriteMany" ],
        "nfs": {
            "path": "/opt/nfs/pv0013",
            "server": "10.100.192.201"
        },
        "persistentVolumeReclaimPolicy": "Recycle"
    }
}
