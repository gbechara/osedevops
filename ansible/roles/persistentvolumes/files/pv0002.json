{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pv0002"
  },
  "spec": {
    "capacity": {
        "storage": "512Mi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "/opt/nfs/pv0002",
        "server": "10.100.192.201"
    },
    "persistentVolumeReclaimPolicy": "Recycle"
  }
}
